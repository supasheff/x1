<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFF" 
    android:isScrollContainer="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >
         
         <ImageView
             android:id="@+id/imageView1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_gravity="left"
             android:src="@drawable/brlogo" />
        
    </LinearLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
       
        android:background="#1e98d7"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="Переснять"
        android:textColor="#FFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_weight="0"
        android:text="Заполни форму"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#F000"
        android:textSize="30dp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3" 
        android:background="#FFFF"
        />

   

    <EditText
        android:id="@+id/Tema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="1"
        android:hint="@string/tema"
         />
 
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/editText1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Время"
            android:inputType="time"
             />

        <EditText
            android:id="@+id/editText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="дата съемки"
            android:inputType="date" 
            />

    </LinearLayout>
   		 <EditText
        android:id="@+id/adres_here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:layout_weight="0"
        android:ems="10"
        android:hint="@string/adres_here"
         />


   		     <LinearLayout
   		         android:id="@+id/scrollView1"
   		         android:layout_width="match_parent"
   		         android:layout_height="match_parent"
   		         android:layout_weight="100" 
   		         android:gravity="top">

   		         <EditText
   		             android:id="@+id/emailtext"
   		             android:layout_width="match_parent"
   		             android:layout_height="match_parent"
   		           
   		             android:background="#FFFF"
   		             android:ems="3"
   		             android:hint="Текст письма"
   		             android:inputType="textMultiLine" />
   		     </LinearLayout>

   		     <LinearLayout
   		          android:id="@+id/View1"
   		         android:layout_width="match_parent"
   		         android:layout_height="wrap_content"
   		        
   		         android:layout_weight="1"
   		         android:gravity="bottom"
   		         android:orientation="horizontal" >
   		     

   		     <Button
   		         android:id="@+id/button1"
   		         style="@style/blue_button"
   		        
   		         android:layout_alignParentLeft="true"
   		         android:layout_below="@+id/scrollView1"
   		         android:layout_weight="1"
   		         android:text="Отправить" />
</LinearLayout>
   		

</LinearLayout>
